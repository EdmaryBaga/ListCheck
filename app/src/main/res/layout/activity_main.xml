<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lista de Productos"
        android:textStyle="bold|italic"
        android:textSize="30sp"
        android:textColor="@color/btn_create"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/lista_prod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/titulo_list"
        app:layout_constraintRight_toRightOf="parent" >
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/crea_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_create"
        android:text="@string/crear_un_producto"
        android:textColor="@color/blanco"
        android:textStyle="bold"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


</android.support.constraint.ConstraintLayout>