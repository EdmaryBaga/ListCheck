<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/titulo_crea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="creando un nuevo producto"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <LinearLayout
        android:id="@+id/formulario_crear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titulo_crea"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@id/titulo_crea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agrega un nombre a tu producto"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:id="@+id/nombre_prod_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="45dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="45dp" />
    </LinearLayout>
    <Button
        android:id="@+id/crear_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:textColor="@color/blanco"
        android:textStyle="bold"
        android:background="@color/btn_create"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/formulario_crear"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>